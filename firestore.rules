
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * GLOBAL PERMISSIVE POLICY (V15.0.0)
     * 
     * This policy allows unrestricted access to all document paths for both read and write.
     * We are using explicit path matching for the institutions collection to ensure
     * that the 'list' method is correctly authorized for all sub-collections.
     */
    
    match /institutions/{instId} {
      allow read, write: if true;
      
      match /{allSubPaths=**} {
        allow read, write: if true;
      }
    }

    match /{allPaths=**} {
      allow read, write: if true;
    }
  }
}
