
{
  "entities": {
    "InstitutionSettings": {
      "title": "InstitutionSettings",
      "type": "object",
      "description": "Comprehensive configuration object for an institution, managing operational, financial, and branding parameters.",
      "properties": {
        "id": { "type": "string" },
        "general": {
          "type": "object",
          "properties": {
            "timezone": { "type": "string" },
            "fiscalYearStart": { "type": "string" },
            "language": { "type": "string" }
          }
        },
        "pos": {
          "type": "object",
          "properties": {
            "requireCustomerForSale": { "type": "boolean" },
            "printReceiptOnComplete": { "type": "boolean" },
            "allowCustomDiscounts": { "type": "boolean" }
          }
        },
        "gateways": {
          "type": "object",
          "properties": {
            "mpesaConsumerKey": { "type": "string" },
            "mpesaConsumerSecret": { "type": "string" },
            "mpesaShortcode": { "type": "string" }
          }
        }
      }
    },
    "ChartOfAccount": {
      "title": "ChartOfAccount",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "code": { "type": "string" },
        "name": { "type": "string" },
        "type": { "type": "string", "enum": ["Asset", "Liability", "Equity", "Income", "Expense"] },
        "subtype": { "type": "string" },
        "balance": { "type": "number" },
        "isActive": { "type": "boolean" },
        "isTrackedForBudget": { "type": "boolean" },
        "monthlyLimit": { "type": "number" }
      }
    },
    "ProductCategory": {
      "title": "ProductCategory",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" }
      }
    },
    "UnitOfMeasure": {
      "title": "UnitOfMeasure",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "code": { "type": "string" },
        "name": { "type": "string" },
        "baseFactor": { "type": "number" }
      }
    },
    "Product": {
      "title": "Product",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "sku": { "type": "string" },
        "type": { "type": "string", "enum": ["Stock", "Service", "Bundle"] },
        "categoryId": { "type": "string" },
        "uomId": { "type": "string" },
        "basePrice": { "type": "number" },
        "costPrice": { "type": "number" },
        "reorderLevel": { "type": "number" },
        "shelfLifeDays": { "type": "number", "description": "Standard shelf life in days for predictive batch expiry." },
        "trackExpiry": { "type": "boolean" },
        "trackSerials": { "type": "boolean" },
        "totalStock": { "type": "number" }
      }
    },
    "Warehouse": {
      "title": "Warehouse",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "code": { "type": "string" },
        "location": { "type": "string" },
        "isDefault": { "type": "boolean" }
      }
    },
    "PriceList": {
      "title": "PriceList",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "isActive": { "type": "boolean" },
        "isDefault": { "type": "boolean" }
      }
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/institutions/{institutionId}/coa/{accountId}",
        "definition": {
          "entityName": "ChartOfAccount",
          "schema": { "$ref": "#/backend/entities/ChartOfAccount" },
          "description": "Chart of Accounts ledger nodes."
        }
      },
      {
        "path": "/institutions/{institutionId}/categories/{id}",
        "definition": {
          "entityName": "ProductCategory",
          "schema": { "$ref": "#/backend/entities/ProductCategory" },
          "description": "Product categories."
        }
      },
      {
        "path": "/institutions/{institutionId}/uoms/{id}",
        "definition": {
          "entityName": "UnitOfMeasure",
          "schema": { "$ref": "#/backend/entities/UnitOfMeasure" },
          "description": "Units of measure."
        }
      },
      {
        "path": "/institutions/{institutionId}/products/{productId}",
        "definition": {
          "entityName": "Product",
          "schema": { "$ref": "#/backend/entities/Product" },
          "description": "Stock items and services."
        }
      },
      {
        "path": "/institutions/{institutionId}/warehouses/{warehouseId}",
        "definition": {
          "entityName": "Warehouse",
          "schema": { "$ref": "#/backend/entities/Warehouse" },
          "description": "Storage locations."
        }
      },
      {
        "path": "/institutions/{institutionId}/batches/{batchId}",
        "definition": {
          "entityName": "Batch",
          "schema": {
            "type": "object",
            "properties": {
              "productId": { "type": "string" },
              "warehouseId": { "type": "string" },
              "batchNumber": { "type": "string" },
              "expiryDate": { "type": "string", "format": "date-time" },
              "quantity": { "type": "number" }
            }
          },
          "description": "Individual stock batches with expiry tracking."
        }
      },
      {
        "path": "/institutions/{institutionId}/price_lists/{id}",
        "definition": {
          "entityName": "PriceList",
          "schema": { "$ref": "#/backend/entities/PriceList" },
          "description": "Tiered pricing lists."
        }
      },
      {
        "path": "/institutions/{institutionId}/price_lists/{id}/items/{productId}",
        "definition": {
          "entityName": "PriceListItem",
          "schema": {
            "type": "object",
            "properties": {
              "productId": { "type": "string" },
              "price": { "type": "number" }
            }
          },
          "description": "Product price overrides within a list."
        }
      }
    ]
  }
}
