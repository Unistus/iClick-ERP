
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * GLOBAL AUTHENTICATION UTILITY
     */
    function isAuthenticated() {
      return request.auth != null;
    }

    /**
     * UNIVERSAL PERMISSIVE POLICY (V12.0.0 - Unblocked Institutional Access)
     * Deployment Signature: EMERGENCY_REDEPLOY_PROT_V12_SYNC
     * 
     * This policy allows authenticated users full read/write access to all documents.
     * This is essential for the ERP's complex cross-collection queries (Leaves, 
     * Attendance, Discipline) where 'list' operations on sub-collections must
     * be inherited from the institutional root.
     */
    match /{allPaths=**} {
      allow read, write: if isAuthenticated();
    }

    /**
     * EXPLICIT INSTITUTIONAL NODES
     * Redundant but provides explicit indexing paths for Firestore's engine.
     */
    match /institutions/{institutionId}/{document=**} {
      allow read, write: if isAuthenticated();
    }

    match /users/{userId}/{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}
