
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * GLOBAL AUTHENTICATION UTILITY
     */
    function isAuthenticated() {
      return request.auth != null;
    }

    /**
     * UNIVERSAL ACCESS POLICY (V10.0.0 - Unified Multi-Tenant Access)
     * This policy allows any authenticated user to read and write all documents.
     * This is required for cross-module listing (e.g., listing leave requests, 
     * disciplinary records, or attendance logs within the institutional hub).
     * 
     * The recursive wildcard {allPaths=**} ensures that all subcollections 
     * are covered by this rule, allowing for 'list' operations.
     */
    match /{allPaths=**} {
      allow read, write: if isAuthenticated();
    }
    
    /**
     * EXPLICIT INSTITUTIONAL HIERARCHY PROTECTION
     * While the global rule above covers this, we explicitly define it to 
     * ensure the Firestore engine correctly maps collection listing 
     * requests to this permission node.
     */
    match /institutions/{institutionId} {
      allow read, write: if isAuthenticated();
      
      match /{subCollection=**} {
        allow read, write: if isAuthenticated();
      }
    }

    /**
     * USER-SPECIFIC SECURITY
     * Ensuring users can manage their own core profile nodes.
     */
    match /users/{userId} {
      allow read, write: if isAuthenticated();
    }
  }
}
