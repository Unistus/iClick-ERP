
{
  "entities": {
    "InstitutionSettings": {
      "title": "InstitutionSettings",
      "type": "object",
      "description": "Comprehensive configuration object for an institution, managing operational, financial, and branding parameters.",
      "properties": {
        "id": { "type": "string" },
        "general": {
          "type": "object",
          "properties": {
            "timezone": { "type": "string" },
            "fiscalYearStart": { "type": "string" },
            "language": { "type": "string" }
          }
        },
        "pos": {
          "type": "object",
          "properties": {
            "requireCustomerForSale": { "type": "boolean" },
            "printReceiptOnComplete": { "type": "boolean" },
            "allowCustomDiscounts": { "type": "boolean" }
          }
        },
        "gateways": {
          "type": "object",
          "properties": {
            "mpesaConsumerKey": { "type": "string" },
            "mpesaConsumerSecret": { "type": "string" },
            "mpesaShortcode": { "type": "string" }
          }
        }
      }
    },
    "ChartOfAccount": {
      "title": "ChartOfAccount",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "code": { "type": "string" },
        "name": { "type": "string" },
        "type": { "type": "string", "enum": ["Asset", "Liability", "Equity", "Income", "Expense"] },
        "subtype": { "type": "string" },
        "balance": { "type": "number" },
        "isActive": { "type": "boolean" },
        "isTrackedForBudget": { "type": "boolean" },
        "monthlyLimit": { "type": "number" }
      }
    },
    "JournalEntry": {
      "title": "JournalEntry",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "description": { "type": "string" },
        "reference": { "type": "string" },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "accountId": { "type": "string" },
              "amount": { "type": "number" },
              "type": { "type": "string", "enum": ["Debit", "Credit"] }
            }
          }
        }
      }
    },
    "ExpenseRequisition": {
      "title": "ExpenseRequisition",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "requestedBy": { "type": "string" },
        "amount": { "type": "number" },
        "status": { "type": "string", "enum": ["Pending", "Approved", "Paid", "Rejected"] },
        "expenseAccountId": { "type": "string" },
        "description": { "type": "string" }
      }
    },
    "TaxReturn": {
      "title": "TaxReturn",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "periodId": { "type": "string" },
        "periodName": { "type": "string" },
        "grossSales": { "type": "number" },
        "outputVat": { "type": "number" },
        "inputVat": { "type": "number" },
        "netTaxPayable": { "type": "number" },
        "status": { "type": "string" }
      }
    },
    "FiscalPeriod": {
      "title": "FiscalPeriod",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "startDate": { "type": "string" },
        "endDate": { "type": "string" },
        "status": { "type": "string", "enum": ["Open", "Closed"] }
      }
    },
    "FixedAsset": {
      "title": "FixedAsset",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "code": { "type": "string" },
        "purchasePrice": { "type": "number" },
        "currentValue": { "type": "number" },
        "status": { "type": "string" }
      }
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/institutions/{institutionId}/coa/{accountId}",
        "definition": {
          "entityName": "ChartOfAccount",
          "schema": { "$ref": "#/backend/entities/ChartOfAccount" },
          "description": "Chart of Accounts ledger nodes."
        }
      },
      {
        "path": "/institutions/{institutionId}/fiscal_periods/{periodId}",
        "definition": {
          "entityName": "FiscalPeriod",
          "schema": { "$ref": "#/backend/entities/FiscalPeriod" },
          "description": "Accounting cycles."
        }
      },
      {
        "path": "/institutions/{institutionId}/tax_returns/{returnId}",
        "definition": {
          "entityName": "TaxReturn",
          "schema": { "$ref": "#/backend/entities/TaxReturn" },
          "description": "Historical tax filings."
        }
      },
      {
        "path": "/institutions/{institutionId}/journal_entries/{entryId}",
        "definition": {
          "entityName": "JournalEntry",
          "schema": { "$ref": "#/backend/entities/JournalEntry" },
          "description": "Double-entry logs."
        }
      }
    ]
  }
}
