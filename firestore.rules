
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // HELPER FUNCTIONS
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Identifies the system-level superuser.
     * Hardcoded UID and email bypass for your administrative account.
     */
    function isGlobalAdmin() {
      return isSignedIn() && (
        request.auth.uid == "zWbypB57xVSHFYe3GKf5epvnWLr2" ||
        request.auth.token.email == "enquiry@unistus.co.ke"
      );
    }

    /**
     * Checks if a user has access to a specific institution.
     * Admins get global access; others must have a membership document.
     */
    function isInstitutionMember(institutionId) {
      return isSignedIn() && (
        isGlobalAdmin() || 
        exists(/databases/$(database)/documents/user_institutions/$(request.auth.uid)/memberships/$(institutionId))
      );
    }

    // GLOBAL SUPERUSER OVERRIDE
    // Permits all operations for authorized system administrators across the entire database.
    match /{allPaths=**} {
      allow read, write: if isGlobalAdmin();
    }

    // INSTITUTIONAL PERIMETER
    match /institutions/{institutionId} {
      // Allow general listing/getting of institutions for signed-in users
      allow get, list: if isSignedIn();
      
      // RECURSIVE SUB-COLLECTION DATA GOVERNANCE
      // This covers fiscal_periods, products, journal_entries, etc.
      match /{allSubPaths=**} {
        allow read, write: if isInstitutionMember(institutionId);
      }
    }

    // IDENTITY & MEMBERSHIP LOGS
    match /users/{userId} {
      allow read, write: if isSignedIn() && (request.auth.uid == userId || isGlobalAdmin());
    }

    match /user_institutions/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isGlobalAdmin());
      match /memberships/{institutionId} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isGlobalAdmin());
      }
    }

    // SYSTEM REGISTRIES
    match /system_admins/{uid} {
      allow read: if isSignedIn();
      allow write: if isGlobalAdmin();
    }
    
    match /currencies/{id} {
      allow read: if isSignedIn();
      allow write: if isGlobalAdmin();
    }

    // Deployment signature: V2.1.0-FIX-PERMISSIONS-LISTING
  }
}
