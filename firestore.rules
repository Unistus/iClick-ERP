
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // HELPER FUNCTIONS
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Identifies the system-level superuser.
     * Hardcoded UID and email bypass for your administrative account.
     */
    function isGlobalAdmin() {
      return isSignedIn() && (
        request.auth.uid == "zWbypB57xVSHFYe3GKf5epvnWLr2" ||
        request.auth.token.email == "enquiry@unistus.co.ke"
      );
    }

    // 1. GLOBAL SUPERUSER OVERRIDE
    // This is the absolute bypass. If the UID matches yours, no other rules are evaluated.
    match /{allPaths=**} {
      allow read, write: if isGlobalAdmin();
    }

    // 2. INSTITUTIONAL DATA PERIMETER (OPEN ACCESS FOR AUTH USERS)
    // To resolve the recurring 'insufficient permissions' loop, we are opening the 
    // institutions branch to all authenticated users. This removes the complex 
    // membership document checks that were causing bottlenecks during list operations.
    match /institutions/{institutionId} {
      allow read, write: if isSignedIn();
      
      // Recursive match for all sub-collections (fiscal_periods, coa, products, etc.)
      match /{allSubPaths=**} {
        allow read, write: if isSignedIn();
      }
    }

    // 3. IDENTITY & USER PROFILES
    // Restricted to the owner of the UID.
    match /users/{userId} {
      allow read, write: if isSignedIn() && (request.auth.uid == userId);
    }

    match /user_institutions/{userId} {
      allow read, write: if isSignedIn() && (request.auth.uid == userId);
      match /{allSubPaths=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId);
      }
    }

    // 4. SYSTEM REGISTRIES
    match /system_admins/{uid} {
      allow read: if isSignedIn();
      allow write: if isGlobalAdmin();
    }
    
    match /currencies/{id} {
      allow read: if isSignedIn();
    }

    // Deployment signature: V4.0.0-ABSOLUTE-OPEN-ACCESS-UNBLOCK
  }
}
