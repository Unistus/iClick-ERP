{
  "entities": {
    "InstitutionSettings": {
      "title": "InstitutionSettings",
      "type": "object",
      "description": "Comprehensive configuration object for an institution, managing operational, financial, and branding parameters.",
      "properties": {
        "id": { "type": "string" },
        "general": {
          "type": "object",
          "properties": {
            "timezone": { "type": "string" },
            "fiscalYearStart": { "type": "string" },
            "language": { "type": "string" },
            "currencySymbol": { "type": "string" }
          }
        },
        "pos": {
          "type": "object",
          "properties": {
            "requireCustomerForSale": { "type": "boolean" },
            "printReceiptOnComplete": { "type": "boolean" },
            "allowCustomDiscounts": { "type": "boolean" }
          }
        },
        "gateways": {
          "type": "object",
          "properties": {
            "mpesaConsumerKey": { "type": "string" },
            "mpesaConsumerSecret": { "type": "string" },
            "mpesaShortcode": { "type": "string" }
          }
        }
      }
    },
    "GeoLocation": {
      "title": "GeoLocation",
      "type": "object",
      "description": "Hierarchical geographic node for logistics and grouping.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "level": { "type": "string", "enum": ["Continent", "Region", "Country", "Town", "Area"] },
        "parentId": { "type": "string", "description": "ID of the parent node in the hierarchy." }
      }
    },
    "Customer": {
      "title": "Customer",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "legalName": { "type": "string" },
        "tradingName": { "type": "string" },
        "registrationNumber": { "type": "string" },
        "registrationDate": { "type": "string", "format": "date" },
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "status": { "type": "string", "enum": ["Lead", "Active", "Blocked"] },
        "contactPerson": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "role": { "type": "string" },
            "phone": { "type": "string" }
          }
        },
        "tier": { "type": "string", "enum": ["Silver", "Gold", "Platinum"] },
        "loyaltyPoints": { "type": "number" },
        "walletBalance": { "type": "number" },
        "creditLimit": { "type": "number" },
        "currencyId": { "type": "string" },
        "assignedSalesPersonId": { "type": "string" },
        "taxPin": { "type": "string" },
        "billingAddress": { "type": "string" },
        "shippingAddress": { "type": "string" },
        "geoCountryId": { "type": "string" },
        "geoTownId": { "type": "string" },
        "geoAreaId": { "type": "string" },
        "preferredDeliveryTime": { "type": "string", "enum": ["Morning", "Afternoon", "Evening"] },
        "deliveryNotes": { "type": "string" }
      }
    },
    "LoyaltyLog": {
      "title": "LoyaltyLog",
      "type": "object",
      "properties": {
        "customerId": { "type": "string" },
        "points": { "type": "number" },
        "type": { "type": "string", "enum": ["Earn", "Redeem", "Adjust"] },
        "reference": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" }
      }
    },
    "MarketingCampaign": {
      "title": "MarketingCampaign",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "channel": { "type": "string", "enum": ["SMS", "Email", "System"] },
        "status": { "type": "string", "enum": ["Draft", "Active", "Completed"] },
        "budget": { "type": "number" },
        "reach": { "type": "number" }
      }
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/institutions/{institutionId}/customers/{customerId}",
        "definition": {
          "entityName": "Customer",
          "schema": { "$ref": "#/backend/entities/Customer" },
          "description": "Unified customer profiles and loyalty metadata."
        }
      },
      {
        "path": "/institutions/{institutionId}/geo_locations/{id}",
        "definition": {
          "entityName": "GeoLocation",
          "schema": { "$ref": "#/backend/entities/GeoLocation" },
          "description": "Hierarchical logistics locations."
        }
      }
    ]
  }
}