
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isGlobalAdmin() {
      return isSignedIn() && (
        exists(/databases/$(database)/documents/system_admins/$(request.auth.uid)) ||
        request.auth.token.email == "enquiry@unistus.co.ke"
      );
    }

    function isInstitutionMember(institutionId) {
      return isSignedIn() && (
        isGlobalAdmin() || 
        exists(/databases/$(database)/documents/user_institutions/$(request.auth.uid)/memberships/$(institutionId))
      );
    }

    match /system_admins/{uid} {
      allow read: if isSignedIn();
      allow write: if isGlobalAdmin() || (isSignedIn() && !exists(/databases/$(database)/documents/system_admins/$(request.auth.uid)));
    }

    match /users/{userId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if request.auth.uid == userId || isGlobalAdmin();
    }

    match /user_institutions/{userId}/memberships/{institutionId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /currencies/{id} {
      allow read: if isSignedIn();
      allow write: if isGlobalAdmin();
    }

    match /institutions/{institutionId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isInstitutionMember(institutionId);
      
      // Operational Collections
      match /expenses/{expenseId} {
        allow read, write: if isInstitutionMember(institutionId);
      }

      match /tax_returns/{returnId} {
        allow read, write: if isInstitutionMember(institutionId);
      }

      match /coa/{accountId} {
        allow read, write: if isInstitutionMember(institutionId);
      }

      match /journal_entries/{entryId} {
        allow read, write: if isInstitutionMember(institutionId);
      }

      match /invoices/{invoiceId} {
        allow read, write: if isInstitutionMember(institutionId);
      }

      match /payables/{payableId} {
        allow read, write: if isInstitutionMember(institutionId);
      }

      match /assets/{assetId} {
        allow read, write: if isInstitutionMember(institutionId);
      }

      // Inventory Flattened Collections
      match /products/{id} {
        allow read, write: if isInstitutionMember(institutionId);
      }
      match /movements/{id} {
        allow read, write: if isInstitutionMember(institutionId);
      }
      match /warehouses/{id} {
        allow read, write: if isInstitutionMember(institutionId);
      }
      match /batches/{id} {
        allow read, write: if isInstitutionMember(institutionId);
      }

      // Admin & Config Collections
      match /settings/{settingId} {
        allow read, write: if isInstitutionMember(institutionId);
      }

      match /audit_logs/{logId} {
        allow read, write: if isInstitutionMember(institutionId);
      }

      match /document_sequences/{sequenceId} {
        allow read, write: if isInstitutionMember(institutionId);
      }

      match /api_keys/{keyId} {
        allow read, write: if isInstitutionMember(institutionId);
      }

      match /notification_templates/{templateId} {
        allow read, write: if isInstitutionMember(institutionId);
      }

      match /roles/{roleId} {
        allow read, write: if isInstitutionMember(institutionId);
        match /members/{userId} {
          allow read, write: if isInstitutionMember(institutionId);
        }
      }

      match /tax_settings/{taxSettingId} {
        allow read, write: if isInstitutionMember(institutionId);
      }

      match /branches/{branchId} {
        allow read, write: if isInstitutionMember(institutionId);
        match /departments/{deptId} {
          allow read, write: if isInstitutionMember(institutionId);
        }
      }

      match /fiscal_periods/{periodId} {
        allow read, write: if isInstitutionMember(institutionId);
      }

      match /approval_workflows/{workflowId} {
        allow read, write: if isInstitutionMember(institutionId);
      }
    }
  }
}
