rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * ABSOLUTE ACCESS POLICY (V6.5.0-ERP-CORE)
     * Permissions are open to all authenticated users to prevent UI locks
     * during complex nested queries in the HR and Budgeting hubs.
     */
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Explicit HR Collection Matchers
    match /institutions/{instId}/employees/{empId} { allow read, write: if request.auth != null; }
    match /institutions/{instId}/attendance/{attId} { allow read, write: if request.auth != null; }
    match /institutions/{instId}/leave_requests/{reqId} { allow read, write: if request.auth != null; }
    match /institutions/{instId}/shifts/{shiftId} { allow read, write: if request.auth != null; }
    match /institutions/{instId}/performance_reviews/{revId} { allow read, write: if request.auth != null; }
    match /institutions/{instId}/disciplinary_records/{recId} { allow read, write: if request.auth != null; }
    match /institutions/{instId}/job_levels/{id} { allow read, write: if request.auth != null; }
    match /institutions/{instId}/leave_types/{id} { allow read, write: if request.auth != null; }

    // User Profile & Tenancy
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /user_institutions/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      match /{allSubPaths=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}