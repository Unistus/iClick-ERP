
{
  "entities": {
    "InstitutionSettings": {
      "title": "InstitutionSettings",
      "type": "object",
      "description": "Comprehensive configuration object for an institution, managing operational, financial, and branding parameters.",
      "properties": {
        "id": { "type": "string" },
        "general": {
          "type": "object",
          "properties": {
            "timezone": { "type": "string" },
            "fiscalYearStart": { "type": "string" },
            "language": { "type": "string" },
            "currencySymbol": { "type": "string" }
          }
        },
        "pos": {
          "type": "object",
          "properties": {
            "requireCustomerForSale": { "type": "boolean" },
            "printReceiptOnComplete": { "type": "boolean" },
            "allowCustomDiscounts": { "type": "boolean" }
          }
        },
        "gateways": {
          "type": "object",
          "properties": {
            "mpesaConsumerKey": { "type": "string" },
            "mpesaConsumerSecret": { "type": "string" },
            "mpesaShortcode": { "type": "string" }
          }
        }
      }
    },
    "ChartOfAccount": {
      "title": "ChartOfAccount",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "code": { "type": "string" },
        "name": { "type": "string" },
        "type": { "type": "string", "enum": ["Asset", "Liability", "Equity", "Income", "Expense"] },
        "subtype": { "type": "string" },
        "balance": { "type": "number" },
        "isActive": { "type": "boolean" },
        "isTrackedForBudget": { "type": "boolean" },
        "monthlyLimit": { "type": "number" }
      }
    },
    "FiscalPeriod": {
      "title": "FiscalPeriod",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "startDate": { "type": "string", "format": "date" },
        "endDate": { "type": "string", "format": "date" },
        "status": { "type": "string", "enum": ["Open", "Closed"] }
      }
    },
    "BudgetAllocation": {
      "title": "BudgetAllocation",
      "type": "object",
      "description": "A period-specific expenditure target for a ledger node.",
      "properties": {
        "accountId": { "type": "string" },
        "limit": { "type": "number" },
        "updatedAt": { "type": "string", "format": "date-time" }
      }
    },
    "Product": {
      "title": "Product",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "sku": { "type": "string" },
        "type": { "type": "string", "enum": ["Stock", "Service", "Bundle"] },
        "categoryId": { "type": "string" },
        "uomId": { "type": "string" },
        "basePrice": { "type": "number" },
        "costPrice": { "type": "number" },
        "reorderLevel": { "type": "number" },
        "shelfLifeDays": { "type": "number" },
        "trackExpiry": { "type": "boolean" },
        "trackSerials": { "type": "boolean" },
        "totalStock": { "type": "number" }
      }
    },
    "Warehouse": {
      "title": "Warehouse",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "code": { "type": "string" },
        "location": { "type": "string" },
        "isDefault": { "type": "boolean" }
      }
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/institutions/{institutionId}/coa/{accountId}",
        "definition": {
          "entityName": "ChartOfAccount",
          "schema": { "$ref": "#/backend/entities/ChartOfAccount" },
          "description": "Chart of Accounts ledger nodes."
        }
      },
      {
        "path": "/institutions/{institutionId}/fiscal_periods/{periodId}",
        "definition": {
          "entityName": "FiscalPeriod",
          "schema": { "$ref": "#/backend/entities/FiscalPeriod" },
          "description": "Auditing cycles."
        }
      },
      {
        "path": "/institutions/{institutionId}/fiscal_periods/{periodId}/allocations/{accountId}",
        "definition": {
          "entityName": "BudgetAllocation",
          "schema": { "$ref": "#/backend/entities/BudgetAllocation" },
          "description": "Period-specific spend targets."
        }
      },
      {
        "path": "/institutions/{institutionId}/products/{productId}",
        "definition": {
          "entityName": "Product",
          "schema": { "$ref": "#/backend/entities/Product" },
          "description": "Stock items and services."
        }
      },
      {
        "path": "/institutions/{institutionId}/journal_entries/{id}",
        "definition": {
          "entityName": "JournalEntry",
          "schema": {
            "type": "object",
            "properties": {
              "date": { "type": "string", "format": "date-time" },
              "description": { "type": "string" },
              "reference": { "type": "string" },
              "items": { "type": "array" }
            }
          },
          "description": "Double-entry accounting records."
        }
      }
    ]
  }
}
