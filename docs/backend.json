
{
  "entities": {
    "InstitutionSettings": {
      "title": "InstitutionSettings",
      "type": "object",
      "description": "Comprehensive configuration object for an institution, managing operational, financial, and branding parameters.",
      "properties": {
        "id": { "type": "string" },
        "general": {
          "type": "object",
          "properties": {
            "timezone": { "type": "string" },
            "fiscalYearStart": { "type": "string" },
            "language": { "type": "string" }
          }
        },
        "pos": {
          "type": "object",
          "properties": {
            "requireCustomerForSale": { "type": "boolean" },
            "printReceiptOnComplete": { "type": "boolean" },
            "allowCustomDiscounts": { "type": "boolean" }
          }
        },
        "gateways": {
          "type": "object",
          "properties": {
            "mpesaConsumerKey": { "type": "string" },
            "mpesaConsumerSecret": { "type": "string" },
            "mpesaShortcode": { "type": "string" }
          }
        }
      }
    },
    "ChartOfAccount": {
      "title": "ChartOfAccount",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "code": { "type": "string" },
        "name": { "type": "string" },
        "type": { "type": "string", "enum": ["Asset", "Liability", "Equity", "Income", "Expense"] },
        "subtype": { "type": "string" },
        "balance": { "type": "number" },
        "isActive": { "type": "boolean" },
        "isTrackedForBudget": { "type": "boolean" },
        "monthlyLimit": { "type": "number" }
      }
    },
    "JournalEntry": {
      "title": "JournalEntry",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "description": { "type": "string" },
        "reference": { "type": "string" },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "accountId": { "type": "string" },
              "amount": { "type": "number" },
              "type": { "type": "string", "enum": ["Debit", "Credit"] }
            }
          }
        }
      }
    },
    "Product": {
      "title": "Product",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "sku": { "type": "string" },
        "type": { "type": "string", "enum": ["Stock", "Service", "Bundle"] },
        "categoryId": { "type": "string" },
        "uomId": { "type": "string" },
        "basePrice": { "type": "number" },
        "costPrice": { "type": "number" },
        "reorderLevel": { "type": "number" },
        "trackExpiry": { "type": "boolean" },
        "trackSerials": { "type": "boolean" },
        "totalStock": { "type": "number" }
      }
    },
    "Warehouse": {
      "title": "Warehouse",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "code": { "type": "string" },
        "location": { "type": "string" },
        "isDefault": { "type": "boolean" }
      }
    },
    "StockMovement": {
      "title": "StockMovement",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "productId": { "type": "string" },
        "warehouseId": { "type": "string" },
        "type": { "type": "string", "enum": ["In", "Out", "Transfer", "Adjustment", "Damage"] },
        "quantity": { "type": "number" },
        "reference": { "type": "string" },
        "batchId": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" }
      }
    },
    "InventoryBatch": {
      "title": "InventoryBatch",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "productId": { "type": "string" },
        "batchNumber": { "type": "string" },
        "expiryDate": { "type": "string", "format": "date" },
        "warehouseId": { "type": "string" },
        "quantity": { "type": "number" }
      }
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/institutions/{institutionId}/coa/{accountId}",
        "definition": {
          "entityName": "ChartOfAccount",
          "schema": { "$ref": "#/backend/entities/ChartOfAccount" },
          "description": "Chart of Accounts ledger nodes."
        }
      },
      {
        "path": "/institutions/{institutionId}/products/{productId}",
        "definition": {
          "entityName": "Product",
          "schema": { "$ref": "#/backend/entities/Product" },
          "description": "Stock items and services."
        }
      },
      {
        "path": "/institutions/{institutionId}/warehouses/{warehouseId}",
        "definition": {
          "entityName": "Warehouse",
          "schema": { "$ref": "#/backend/entities/Warehouse" },
          "description": "Storage locations."
        }
      },
      {
        "path": "/institutions/{institutionId}/movements/{movementId}",
        "definition": {
          "entityName": "StockMovement",
          "schema": { "$ref": "#/backend/entities/StockMovement" },
          "description": "Ledger of all stock changes."
        }
      },
      {
        "path": "/institutions/{institutionId}/batches/{batchId}",
        "definition": {
          "entityName": "InventoryBatch",
          "schema": { "$ref": "#/backend/entities/InventoryBatch" },
          "description": "Batch and expiry tracking."
        }
      }
    ]
  }
}
