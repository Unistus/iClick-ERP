
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // HELPER FUNCTIONS
    function isSignedIn() {
      return request.auth != null;
    }

    function isGlobalAdmin() {
      // PRIORITY 1: Explicit UID Override (Absolute bypass)
      // PRIORITY 2: Token-based email verification
      // PRIORITY 3: Registry-based check
      return isSignedIn() && (
        request.auth.uid == "zWbypB57xVSHFYe3GKf5epvnWLr2" ||
        request.auth.token.email == "enquiry@unistus.co.ke" ||
        exists(/databases/$(database)/documents/system_admins/$(request.auth.uid))
      );
    }

    function isInstitutionMember(institutionId) {
      return isSignedIn() && (
        isGlobalAdmin() || 
        exists(/databases/$(database)/documents/user_institutions/$(request.auth.uid)/memberships/$(institutionId))
      );
    }

    // GLOBAL SUPERUSER OVERRIDE
    // High-level match for broad administrative access
    match /{allPaths=**} {
      allow read, write: if isGlobalAdmin();
    }

    // INSTITUTION CORE
    match /institutions/{institutionId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow update: if isInstitutionMember(institutionId);
      
      // RECURSIVE SUB-COLLECTION ACCESS
      // This ensure that all nested resources (budgeting, sales, etc.) inherit membership checks
      match /{allSubPaths=**} {
        allow read, write: if isInstitutionMember(institutionId);
      }

      // Explicit matchers for Budgeting Sub-collections
      match /fiscal_periods/{periodId} {
        allow read, write: if isInstitutionMember(institutionId);
        match /allocations/{accountId} {
          allow read, write: if isInstitutionMember(institutionId);
        }
      }

      match /journal_entries/{entryId} {
        allow read, write: if isInstitutionMember(institutionId);
      }

      match /coa/{accountId} {
        allow read, write: if isInstitutionMember(institutionId);
      }
    }

    // USER PROFILES & MEMBERSHIPS
    match /users/{userId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if request.auth.uid == userId || isGlobalAdmin();
    }

    match /user_institutions/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isGlobalAdmin());
      match /memberships/{institutionId} {
        allow read: if isSignedIn() && (request.auth.uid == userId || isGlobalAdmin());
        allow write: if isSignedIn() && (request.auth.uid == userId || isGlobalAdmin());
      }
    }

    match /system_admins/{uid} {
      allow read: if isSignedIn();
      allow write: if isGlobalAdmin();
    }
    
    match /currencies/{id} {
      allow read: if isSignedIn();
      allow write: if isGlobalAdmin();
    }
  }
}
