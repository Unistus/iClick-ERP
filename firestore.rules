
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isGlobalAdmin() {
      return isSignedIn() && (
        request.auth.token.email == "enquiry@unistus.co.ke" ||
        exists(/databases/$(database)/documents/system_admins/$(request.auth.uid))
      );
    }

    function isInstitutionMember(institutionId) {
      return isSignedIn() && (
        isGlobalAdmin() || 
        exists(/databases/$(database)/documents/user_institutions/$(request.auth.uid)/memberships/$(institutionId))
      );
    }

    // Global Superuser Override - Absolute access for admin
    match /{allPaths=**} {
      allow read, write: if isGlobalAdmin();
    }

    match /system_admins/{uid} {
      allow read: if isSignedIn();
      allow write: if isGlobalAdmin();
    }

    match /users/{userId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if request.auth.uid == userId || isGlobalAdmin();
    }

    match /user_institutions/{userId}/memberships/{institutionId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /institutions/{institutionId} {
      // Any signed-in user can read an institution profile
      allow read: if isSignedIn();
      // Any signed-in user can register an institution (multi-tenancy onboarding)
      allow create: if isSignedIn();
      // Only members/admins can update profile
      allow update: if isInstitutionMember(institutionId);
      
      // All institutional sub-collections (coa, products, payables, invoices, etc.)
      match /{allSubcollections=**} {
        allow read, write: if isInstitutionMember(institutionId);
      }
    }
    
    match /currencies/{id} {
      allow read: if isSignedIn();
      allow write: if isGlobalAdmin();
    }
  }
}
