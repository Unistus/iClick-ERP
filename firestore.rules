
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * GLOBAL PERMISSIVE POLICY (V14.0.0)
     * 
     * This policy allows unrestricted read/write access to all document paths.
     * This is intended to resolve all "Missing or insufficient permissions" errors
     * during the development and prototyping phase of the iClick ERP.
     */
    match /{allPaths=**} {
      allow read, write: if true;
    }
  }
}
