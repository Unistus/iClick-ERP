
{
  "entities": {
    "InstitutionSettings": {
      "title": "InstitutionSettings",
      "type": "object",
      "description": "Comprehensive configuration object for an institution, managing operational, financial, and branding parameters.",
      "properties": {
        "id": { "type": "string" },
        "general": {
          "type": "object",
          "properties": {
            "timezone": { "type": "string" },
            "fiscalYearStart": { "type": "string" },
            "language": { "type": "string" },
            "currencySymbol": { "type": "string" }
          }
        },
        "pos": {
          "type": "object",
          "properties": {
            "requireCustomerForSale": { "type": "boolean" },
            "printReceiptOnComplete": { "type": "boolean" },
            "allowCustomDiscounts": { "type": "boolean" }
          }
        }
      }
    },
    "FiscalPeriod": {
      "title": "FiscalPeriod",
      "type": "object",
      "description": "A defined accounting cycle for budgeting and auditing.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "startDate": { "type": "string", "format": "date" },
        "endDate": { "type": "string", "format": "date" },
        "status": { "type": "string", "enum": ["Open", "Closed"] }
      },
      "required": ["name", "startDate", "endDate", "status"]
    },
    "BudgetAllocation": {
      "title": "BudgetAllocation",
      "type": "object",
      "description": "A defined spend ceiling for a specific ledger account within a fiscal period.",
      "properties": {
        "accountId": { "type": "string" },
        "limit": { "type": "number" },
        "actual": { "type": "number" },
        "utilization": { "type": "number" }
      }
    },
    "Customer": {
      "title": "Customer",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "status": { "type": "string", "enum": ["Lead", "Active", "Blocked"] },
        "tier": { "type": "string", "enum": ["Silver", "Gold", "Platinum"] },
        "loyaltyPoints": { "type": "number" },
        "walletBalance": { "type": "number" }
      }
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/institutions/{institutionId}/fiscal_periods/{periodId}",
        "definition": {
          "entityName": "FiscalPeriod",
          "schema": { "$ref": "#/backend/entities/FiscalPeriod" },
          "description": "Institutional auditing and budgeting cycles."
        }
      },
      {
        "path": "/institutions/{institutionId}/fiscal_periods/{periodId}/allocations/{accountId}",
        "definition": {
          "entityName": "BudgetAllocation",
          "schema": { "$ref": "#/backend/entities/BudgetAllocation" },
          "description": "Specific account spend targets per period."
        }
      },
      {
        "path": "/institutions/{institutionId}/customers/{customerId}",
        "definition": {
          "entityName": "Customer",
          "schema": { "$ref": "#/backend/entities/Customer" },
          "description": "Master customer identity ledger."
        }
      }
    ]
  }
}
