
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // HELPER FUNCTIONS
    function isSignedIn() {
      return request.auth != null;
    }

    function isGlobalAdmin() {
      return isSignedIn() && (
        request.auth.uid == "zWbypB57xVSHFYe3GKf5epvnWLr2" ||
        request.auth.token.email == "enquiry@unistus.co.ke" ||
        exists(/databases/$(database)/documents/system_admins/$(request.auth.uid))
      );
    }

    function isInstitutionMember(institutionId) {
      return isSignedIn() && (
        isGlobalAdmin() || 
        exists(/databases/$(database)/documents/user_institutions/$(request.auth.uid)/memberships/$(institutionId))
      );
    }

    // GLOBAL SUPERUSER OVERRIDE
    // This allows the superadmin absolute read/write access to every document in the database.
    match /{allPaths=**} {
      allow read, write: if isGlobalAdmin();
    }

    // INSTITUTION CORE
    match /institutions {
      allow list: if isSignedIn();
      allow create: if isSignedIn();
    }

    match /institutions/{institutionId} {
      allow get: if isSignedIn();
      allow update: if isInstitutionMember(institutionId);
      
      // RECURSIVE SUB-COLLECTION ACCESS
      // This ensures all sub-collections (budgeting, sales, inventory, etc.)
      // inherit the same membership-based access logic.
      match /{allSubPaths=**} {
        allow read, write: if isInstitutionMember(institutionId);
      }

      // Explicit matches for specific query types if needed for list operations
      match /fiscal_periods { allow list: if isInstitutionMember(institutionId); }
      match /coa { allow list: if isInstitutionMember(institutionId); }
      match /journal_entries { allow list: if isInstitutionMember(institutionId); }
      match /products { allow list: if isInstitutionMember(institutionId); }
      match /customers { allow list: if isInstitutionMember(institutionId); }
      match /campaigns { allow list: if isInstitutionMember(institutionId); }
      match /gift_cards { allow list: if isInstitutionMember(institutionId); }
      match /wallets { allow list: if isInstitutionMember(institutionId); }
      match /promo_codes { allow list: if isInstitutionMember(institutionId); }
      match /branches { allow list: if isInstitutionMember(institutionId); }
      match /roles { allow list: if isInstitutionMember(institutionId); }
      match /sales_orders { allow list: if isInstitutionMember(institutionId); }
      match /sales_invoices { allow list: if isInstitutionMember(institutionId); }
      match /purchase_orders { allow list: if isInstitutionMember(institutionId); }
      match /payables { allow list: if isInstitutionMember(institutionId); }
      match /grns { allow list: if isInstitutionMember(institutionId); }
      match /assets { allow list: if isInstitutionMember(institutionId); }
      match /expenses { allow list: if isInstitutionMember(institutionId); }
      match /tax_returns { allow list: if isInstitutionMember(institutionId); }
      match /geo_locations { allow list: if isInstitutionMember(institutionId); }
    }

    // USER PROFILES & MEMBERSHIPS
    match /users/{userId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if request.auth.uid == userId || isGlobalAdmin();
    }

    match /user_institutions/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isGlobalAdmin());
      match /memberships/{institutionId} {
        allow read: if isSignedIn() && (request.auth.uid == userId || isGlobalAdmin());
        allow write: if isSignedIn() && (request.auth.uid == userId || isGlobalAdmin());
      }
    }

    match /system_admins/{uid} {
      allow read: if isSignedIn();
      allow write: if isGlobalAdmin();
    }
    
    match /currencies/{id} {
      allow read: if isSignedIn();
      allow write: if isGlobalAdmin();
    }
  }
}
