
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isGlobalAdmin() {
      return isSignedIn() && (
        exists(/databases/$(database)/documents/system_admins/$(request.auth.uid)) ||
        request.auth.token.email == "enquiry@unistus.co.ke"
      );
    }

    function isInstitutionMember(institutionId) {
      return isSignedIn() && (
        isGlobalAdmin() || 
        exists(/databases/$(database)/documents/user_institutions/$(request.auth.uid)/memberships/$(institutionId))
      );
    }

    match /system_admins/{uid} {
      allow read: if isSignedIn();
      allow write: if isGlobalAdmin() || (isSignedIn() && !exists(/databases/$(database)/documents/system_admins/$(request.auth.uid)));
    }

    match /users/{userId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if request.auth.uid == userId || isGlobalAdmin();
    }

    match /user_institutions/{userId}/memberships/{institutionId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /institutions/{institutionId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isInstitutionMember(institutionId);
      
      // Core Institutional Dictionaries
      match /coa/{id} { allow read, write: if isInstitutionMember(institutionId); }
      match /categories/{id} { allow read, write: if isInstitutionMember(institutionId); }
      match /uoms/{id} { allow read, write: if isInstitutionMember(institutionId); }
      match /price_lists/{id} { allow read, write: if isInstitutionMember(institutionId); }
      
      // Operational
      match /products/{id} { allow read, write: if isInstitutionMember(institutionId); }
      match /movements/{id} { allow read, write: if isInstitutionMember(institutionId); }
      match /warehouses/{id} { allow read, write: if isInstitutionMember(institutionId); }
      match /batches/{id} { allow read, write: if isInstitutionMember(institutionId); }
      match /expenses/{id} { allow read, write: if isInstitutionMember(institutionId); }
      match /tax_returns/{id} { allow read, write: if isInstitutionMember(institutionId); }
      match /journal_entries/{id} { allow read, write: if isInstitutionMember(institutionId); }
      match /invoices/{id} { allow read, write: if isInstitutionMember(institutionId); }
      match /payables/{id} { allow read, write: if isInstitutionMember(institutionId); }
      match /assets/{id} { allow read, write: if isInstitutionMember(institutionId); }
      match /settings/{id} { allow read, write: if isInstitutionMember(institutionId); }
      match /audit_logs/{id} { allow read, write: if isInstitutionMember(institutionId); }
      match /document_sequences/{id} { allow read, write: if isInstitutionMember(institutionId); }
      match /api_keys/{id} { allow read, write: if isInstitutionMember(institutionId); }
      match /notification_templates/{id} { allow read, write: if isInstitutionMember(institutionId); }
      match /roles/{id} { 
        allow read, write: if isInstitutionMember(institutionId); 
        match /members/{memberId} { allow read, write: if isInstitutionMember(institutionId); }
      }
      match /branches/{id} { 
        allow read, write: if isInstitutionMember(institutionId); 
        match /departments/{deptId} { allow read, write: if isInstitutionMember(institutionId); }
      }
      match /fiscal_periods/{id} { allow read, write: if isInstitutionMember(institutionId); }
      match /approval_workflows/{id} { allow read, write: if isInstitutionMember(institutionId); }
    }
  }
}
